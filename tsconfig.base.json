{
  "compilerOptions": {
    "incremental": true,
    "composite": true,
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "moduleDetection": "force",
    "baseUrl": ".",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "types": [],
    "allowJs": false,
    "checkJs": false,
    "strict": true,
    "strictNullChecks": true,
    "exactOptionalPropertyTypes": false,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "declaration": true,
    "declarationMap": true,
    "noEmitOnError": false,
    "removeComments": false,
    "sourceMap": true,
    "esModuleInterop": false,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "noErrorTruncation": true,
    "skipLibCheck": true,
    "paths": {
      "@i18next-selector/codemod": ["packages/codemod/src/index.js"],
      "@i18next-selector/codemod/*": ["packages/codemod/src/*.js"],
      "@i18next-selector/shadow-i18next": [
        "packages/shadow-i18next/src/index.js"
      ],
      "@i18next-selector/shadow-i18next/*": ["packages/shadow-i18next/*.js"],
      "@i18next-selector/vite-plugin": ["packages/vite-plugin/src/index.js"],
      "@i18next-selector/vite-plugin/*": ["packages/vite-plugin/*.js"]
    }
  }
}
